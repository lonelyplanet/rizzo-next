<article class="intro-narrative">
  {{#if best_in_europe_2019}}
  <a href="https://www.lonelyplanet.com/best-in-europe">
    <img class="intro-narrative__logo" alt="Best in Europe 2019 logo"
      src="https://lonelyplanetimages.imgix.net/marketing/best-in-europe/best-in-europe-2019-logo.svg" />
  </a>
  {{/if}}

  {{#if best_in_asia_pacific_2019}}
  <a href="https://www.lonelyplanet.com/best-in-asia-pacific">
    <img class="intro-narrative__logo" alt="Best in Asia Pacific 2019 logo"
      src="https://lonelyplanetimages.imgix.net/marketing/best-in-asia-pacific-2019/best-in-asia-pacific-2019-logo.png" />
  </a>
  {{/if}}

  {{#if best_in_travel_2020}}
  <a href="https://www.lonelyplanet.com/best-in-travel">
    <img class="intro-narrative__logo" alt="Best in Travel 2020 logo"
      src="https://lonelyplanetstatic.imgix.net/marketing/2020/BIT/BIT2020_Horiz.svg" />
  </a>
  {{/if}}

  <h2 class="intro-narrative__heading">{{{intro_narrative_title}}}</h2>

  <div class="adunit adunit--sponsor-logo display-none"
    id="sponsor-logo-love-letter"
    data-size-mapping="sponsor-logo"
    data-targeting='{ "position": "love-letter" }'>
  </div>

  <div class="intro-narrative__featured">
    <span class="js-intro-narrative">{{{intro_narrative_text}}}</span>
  </div>

  {{#if intro_narrative_expanded}}
    <hr class="intro-narrative__more-separator">
    <p class="intro-narrative__expanded-link">
      <a class="intro-narrative__more">
        Read More
        <span class="icon-chevron-down"></span>
      </a>
    </p>
  {{/if}}

  {{#if intro_narrative_expanded}}
    <div class="intro-narrative__expanded">
      {{#each intro_narrative_expanded}}
        {{#if @last}}
          <h2 class="intro-narrative__title">{{{title}}}</h2>
          <p class="intro-narrative__text">
            <span class="js-intro-narrative">{{{text}}}</span>
          </p>

          <hr class="intro-narrative__less-separator">
          <p class="intro-narrative__expanded-link">
            <a class="intro-narrative__less">
              Read Less
              <span class="icon-chevron-up"></span>
            </a>
          </p>
        {{else}}
          <h2 class="intro-narrative__title">{{{title}}}</h2>
          <p class="intro-narrative__text">
            <span class="js-intro-narrative">{{{text}}}</span>
          </p>
        {{/if}}
      {{/each}}
    </div>
  {{/if}}
</article>
