{
  "source": "src",
  "excludes": ["node_modules", "spec", "sass", "tmp"],
  "includes": ["\\.(jsx?)$"],
  "destination": "./docs/js",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "test": {
          "type": "mocha",
          "source": "./spec"
        }
      }
    },
    {
      "name": "esdoc-es7-plugin"
    },
    {
      "name": "esdoc-inject-style-plugin",
      "option": {
        "enable": true,
        "styles": ["dist/css/docs.css"]
      }
    }
  ]
}
